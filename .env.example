# RETRIEVER
CONTEXTUAL_RETRIEVAL=false
RETRIEVER_TOP_K=12 

# EMBEDDER
EMBEDDER_MODEL_NAME=jinaai/jina-embeddings-v3
EMBEDDER_BASE_URL=http://vllm:8000/v1
EMBEDDER_API_KEY=EMPTY

# RERANKER
RERANKER_ENABLED=false
RERANKER_MODEL=jinaai/jina-reranker-v2-base-multilingual # jinaai/jina-colbert-v2
RERANKER_MODEL_TYPE=crossencoder # colbert
RERANKER_TOP_K=5 # Number of documents to return after reranking. upgrade to 8 for better results if your llm has a wider context window

# Prompts
PROMPTS_DIR=../prompts/example3

# Loaders
PDFLoader=MarkerLoader

# Audio
WHISPER_MODEL=base

# To enable HTTP authentication via HTTPBearer
AUTH_TOKEN=sk-ragdondin-1234

# set to true if you only want to deploy the search and indexer api
ONLY_SEARCH_AND_INDEXER_API=false

# Ray
RAY_NUM_GPUS=0.1
RAY_POOL_SIZE=4 # Number of serializer actor instances
RAY_MAX_TASKS_PER_WORKER=5 # Number of tasks per serializer instance
